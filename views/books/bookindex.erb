<h1>Listing Books<h1/>

<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Author First Name</th>
    <th>Author Last Name</th>
    <th>Checked Out</th>
  </tr>

<% @book.each do |book| %>
  <tr>
    <td><%= book.id %></td>
    <td><%= book.title %></td>
    <td><%= book.author_first_name %></td>
    <td><%= book.author_last_name %></td>
<% book.transaction.each do |af| %>
  <% if af.active_flag == true %>
    <td><%= af.active_flag %></td>
  <% end %>
<% end %>
  </tr>
<% end %>
</table>

